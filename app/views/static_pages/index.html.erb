<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="chatroom-container">
  <h1 class="main-title">LIVE CHATROOM</h1>
  <p class="subtitle">EXPERIMENTAL COMMUNICATION INTERFACE</p>

  <div class="notice-box">
    <p class="notice-text">Messages auto-destruct in 60 minutes / Temporary digital artifacts</p>
  </div>

  <div class="chat-form">
    <form action="#" id="new-chat-form">
      <div style="margin-bottom: 2rem;">
        <label for="chat-name" class="form-label">User Identity</label>
        <input required type="text" id="chat-name" class="form-input" placeholder="ENTER NAME">
      </div>

      <div style="margin-bottom: 3rem;">
        <label for="chat-message" class="form-label">Message Content</label>
        <input required type="text" id="chat-message" class="form-input" placeholder="TYPE MESSAGE">
      </div>
      
      <div class="flex justify-end">
        <button type="submit" class="btn-primary">TRANSMIT</button>
      </div>
    </form>
  </div>

  <div class="chat-messages">
    <ul role="list" id="chats"></ul>
  </div>
</div>
